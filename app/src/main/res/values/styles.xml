<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Facebook applied theme to hide the transparent progressbar-->
    <style name="FullyTranslucent" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:progressBarStyle">@style/InvisibleProgress</item>
    </style>

    <style name="InvisibleProgress">
        <item name="android:visibility">gone</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="BinnersNoActionTheme" parent="Theme.AppCompat.NoActionBar">

    </style>

    <style name="PickupNoActionTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:calendarViewStyle">@style/Widget.CalendarView.Custom</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="Widget.CalendarView.Custom" parent="android:Widget.Holo.CalendarView">
        <item name="android:focusedMonthDateColor">@color/mediumGray</item>
        <item name="android:unfocusedMonthDateColor">@color/mediumGray</item>
        <item name="android:selectedDateVerticalBar">@color/backgroundApp</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@color/whiteBackground</item>
        <item name="android:textColor">@color/transparent_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingBottom">5sp</item>
    </style>
</resources>
