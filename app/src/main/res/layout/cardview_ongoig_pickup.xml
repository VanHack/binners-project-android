<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardViewOnGoingPickups"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    app:cardCornerRadius="@dimen/activity_vertical_margin"
    app:cardElevation="@dimen/activity_vertical_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.gms.maps.MapView
            xmlns:map="http://schemas.android.com/apk/res-auto"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            map:liteMode="true" />

        <TextView
            android:id="@+id/statusTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed"
            android:layout_alignBottom="@+id/map"
            android:layout_centerHorizontal="true"
            android:fontFamily="@string/sans_serif"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time :"
            android:id="@+id/textView"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignTop="@+id/binnerTv"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:30 am"
            android:id="@+id/timeTv"
            android:layout_alignWithParentIfMissing="false"
            android:textStyle="bold"
            android:layout_alignParentLeft="false"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignParentRight="false"
            android:layout_toRightOf="@+id/textView"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date :"
            android:id="@+id/textView3"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignBaseline="@+id/timeTv"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/timeTv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/12/15"
            android:id="@+id/dateTv"
            android:layout_alignWithParentIfMissing="false"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/textView3"
            android:layout_alignBaseline="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Binner :"
            android:id="@+id/textView5"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignTop="@+id/textView3"
            android:layout_toRightOf="@+id/dateTv"
            android:layout_alignBaseline="@+id/dateTv"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Melissa"
            android:id="@+id/binnerTv"
            android:layout_alignWithParentIfMissing="false"
            android:textStyle="bold"
            android:layout_below="@+id/map"
            android:layout_toRightOf="@+id/textView5" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton4"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_edit" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>