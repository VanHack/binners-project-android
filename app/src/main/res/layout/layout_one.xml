<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#369a3f">

    <ImageView
        android:id="@+id/imgCircle"
        app:layout_widthPercent="70%"
        app:layout_heightPercent="50%"
        android:src="@drawable/start_p1_circle"
        app:layout_marginTopPercent="16%"
        app:layout_marginLeftPercent="16%"
        app:layout_marginRightPercent="16%"/>

    <ImageView
        android:id="@+id/imgPronounce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/start_p1_text_top"
        app:layout_marginTopPercent="15%"
        app:layout_marginLeftPercent="8%"
        app:layout_marginRightPercent="8%"
        android:layout_alignTop="@+id/imgCircle"
        android:layout_alignRight="@+id/imgCircle"
        android:layout_alignLeft="@+id/imgCircle" />

    <ImageView
        android:id="@+id/imgExplanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/start_p1_text_top_2"
        android:layout_alignTop="@id/imgCircle"
        android:layout_alignRight="@+id/imgCircle"
        android:layout_alignLeft="@+id/imgCircle"
        app:layout_marginTopPercent="17%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="6%"
        app:layout_marginBottomPercent="16%"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imgRedeemable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/start_p2_redeemable"
        android:layout_below="@+id/imgCircle"
        android:layout_alignRight="@+id/imgCircle"
        android:layout_alignLeft="@+id/imgCircle"
        app:layout_marginTopPercent="10%"
        app:layout_marginLeftPercent="2%"
        app:layout_marginRightPercent="2%"
        app:layout_marginBottomPercent="13%"/>

    <ImageView
        app:layout_widthPercent="8%"
        app:layout_heightPercent="3%"
        android:id="@+id/imgPageCounter"
        android:src="@drawable/start_p1_counter"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        app:layout_marginBottomPercent="3%"/>

    <TextView
        android:id="@+id/imgSkipButton"
        app:layout_widthPercent="8%"
        app:layout_heightPercent="3%"
        android:textColor="#26752d"
        android:text="Skip"
        android:textStyle="bold"
        app:layout_marginRightPercent="5%"
        android:layout_alignBottom="@+id/imgPageCounter"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</android.support.percent.PercentRelativeLayout>