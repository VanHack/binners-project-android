<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/timepicker_time_display_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" >
        <include
            layout="@layout/pickup_time_label"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:layout_gravity="center" />
    </FrameLayout>

    <com.android.datetimepicker.time.RadialPickerLayout
        android:id="@+id/pickup_time_picker"
        android:layout_height="wrap_content"
        android:layout_width="@dimen/picker_dimen"
        android:layout_gravity="center"
        android:background="@color/circle_background"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/line_background" />

    <android.support.percent.PercentRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/timepicker_back_button"
            android:background="@drawable/done_background_color"
            android:layout_width="wrap_content"
            app:layout_widthPercent="50%"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Back"
            android:textSize="@dimen/done_label_size"
            android:textColor="@color/done_text_color" />

        <Button
            android:id="@+id/timepicker_next_button"
            android:background="@drawable/done_background_color"
            android:layout_width="wrap_content"
            app:layout_widthPercent="50%"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/timepicker_back_button"
            android:minHeight="48dp"
            android:text="Next"
            android:textSize="@dimen/done_label_size"
            android:textColor="@color/done_text_color" />
    </android.support.percent.PercentRelativeLayout>

</LinearLayout>