<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#369a3f">

    <ImageView
        android:id="@+id/imgTextTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/start_p2_text_top"
        app:layout_marginTopPercent="2%"
        app:layout_marginBottomPercent="6%"
        app:layout_marginLeftPercent="25%"
        app:layout_marginRightPercent="25%" />

    <ImageView
        android:id="@+id/imgCircle"
        app:layout_widthPercent="70%"
        app:layout_heightPercent="50%"
        android:src="@drawable/start_p2_circle"
        app:layout_marginTopPercent="16%"
        app:layout_marginLeftPercent="16%"
        app:layout_marginRightPercent="16%"/>

    <ImageView
        android:id="@+id/imgTextBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/start_p2_text_bottom"
        android:layout_below="@+id/imgCircle"

        app:layout_marginTopPercent="3%"
        app:layout_marginLeftPercent="25%"
        app:layout_marginRightPercent="25%"
        app:layout_marginBottomPercent="15%"/>

    <ImageView
        app:layout_widthPercent="8%"
        app:layout_heightPercent="3%"
        android:id="@+id/imgPageCounter"
        android:src="@drawable/start_p2_counter"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        app:layout_marginBottomPercent="3%"/>

    <TextView
        android:id="@+id/imgSkipButton"
        app:layout_widthPercent="8%"
        app:layout_heightPercent="3%"
        android:textColor="#26752d"
        android:text="Skip"
        android:textStyle="bold"
        app:layout_marginRightPercent="5%"
        android:layout_alignBottom="@+id/imgPageCounter"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</android.support.percent.PercentRelativeLayout>