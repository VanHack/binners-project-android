<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/create_user_bg"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.com.androidbinnersproject.activities.Login">

    <TextView
        android:id="@+id/create_user_txtSign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/create_user_binners_logo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        android:layout_below="@id/create_user_txtSign_up"
        app:layout_marginTopPercent="8%" />

    <ImageView
        android:id="@+id/create_user_binner_resident_selector"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/create_user_binners_logo"
        android:layout_gravity="center"
        android:src="@drawable/login_resident_selected"
        app:layout_marginTopPercent="4%" />

    <EditText
        android:id="@+id/create_user_edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_user_binner_resident_selector"
        android:gravity="center_horizontal"
        android:hint="Name"
        android:inputType="text"
        android:maxLines="1"
        app:layout_marginTopPercent="8%" />

    <EditText
        android:id="@+id/create_user_edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_user_edtName"
        android:gravity="center_horizontal"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        app:layout_marginTopPercent="2%" />

    <EditText
        android:id="@+id/create_user_edtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_user_edtEmail"
        android:gravity="center_horizontal"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLines="1"
        app:layout_marginTopPercent="2%" />

    <Button
        android:id="@+id/create_user_btnGetStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_user_edtPassword"
        android:background="@drawable/create_user_get_started"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="2%" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_user_btnGetStarted"
        android:gravity="center_horizontal"
        app:layout_marginTopPercent="2%"
        android:text="@string/create_user_without_permission"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:text="@string/create_user_terms_privacy"
        android:textColor="#ffffff" />


</android.support.percent.PercentRelativeLayout>
